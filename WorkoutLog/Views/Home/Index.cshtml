@model WorkoutLog.Models.Exercise

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Workout Log</title>
</head>

<body>      
        <div class="background-journal">
            <h1 class="intro">Welcome to the Workout Log</h1>
            <div class="background-text">
            <h3>Enter your activity:</h3>
            <form asp-action="WorkoutForm" method="post">
                <p>
                    <label asp-for="Workout">Workout</label>
                    <input class="form-control" asp-for="Workout" />
                </p>
                <p>
                    <label asp-for="Time">Time</label>
                    <input class="form-control" asp-for="Time" />
                </p>
                <p>
                    <label asp-for="Date">Date</label>
                    <input class="form-control" asp-for="Date" />
                </p>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>